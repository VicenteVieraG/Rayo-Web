---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"form"> {
    id: string;
    name: string;
    action: string;
    method: "post" | "get" | "dialog";
    className?: string | string[];
};

const { id, name, action, method } = Astro.props;
---

<form
    id={ id }
    name={ name }
    action={ action }
    method={ method }
    class="w-4/5 h-1/6 mx-auto flex flex-wrap gap-3 content-around justify-center">
    <label
        class="w-full h-fit
            text-white text-sm text-opacity-60 text-center text-nowrap
            font-poppins font-light">
        JOIN THE WAITLIST
    </label>
    <input
        id="inptEmail"
        name="inptEmail"
        type="email"
        placeholder="Ingresa tu correo electrÃ³nico"
        class="bg-[#D9D9D9]/50
            pl-2
            min-w-60 min-h-10
            max-w-sm max-h-14
            basis-60 grow
            rounded-full
            border border-white
            outline-none
            placeholder-white placeholder-opacity-60 placeholder:text-sm
            placeholder:font-inter placeholder:font-normal
            transition ease-out duration-200
            hover:border-rblue
            focus:border-rblue">
    <button
        type="submit"
        name="btnSubmit"
        class="bg-rblue
            basis-40
            min-h-10
            max-h-14
            border border-white
            rounded-full
            font-inter font-normal
            transition ease-out duration-200
            hover:text-white hover:border-rblue">
        Enviar
    </button>
</form>